#include "messageDefaults.fcl"
BEGIN_PROLOG
tools: {
  addIntsImpl: {
    tool_type: addInts
  }
}
END_PROLOG

process_name: "TEST"

services:
{
  scheduler:
  {
    allowUnscheduled: true
    wantTracer: true
    Rethrow: [ "ProductNotFound" ]
  }
}

services.message: @local::messageDefaults

physics:
{
  producers:
  {
    one:
    {
      module_type: IntProducer
      ivalue: 1
    }
    result1:
    {
      module_type: AddIntsProducer
      labels: [ "one" ]
      @table::tools
    }
    result2:
    {
      module_type: AddIntsProducer
      labels: [ "result1", "one" ]
      @table::tools
    }
    result4:
    {
      module_type: AddIntsProducer
      labels: [ "result2", "result2" ]
      @table::tools
    }
  }
  analyzers:
  {
    get:
    {
      module_type: IntTestAnalyzer
      input_label: "result4"
      expected_value: 4
    }
  }

  e: [ get ]
  end_paths: [ e ]
}

source:
{
  module_type: EmptyEvent
  maxEvents: 3
}
