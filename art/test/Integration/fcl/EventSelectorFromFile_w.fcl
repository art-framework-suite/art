services.scheduler.wantSummary: true

physics:
{
  producers:
  {
    m1a:
    {
      module_type: IntProducer
      ivalue: 2
    }
    m1b:
    {
      module_type: IntProducer
      ivalue: 7
    }
    m2a:
    {
      module_type: DoubleProducer
      dvalue: -1.25E-1
    }
  }

   p1: [ m1a ]
   p2: [ m1b, m2a ]
   e1: [ out1 ]
   e2: [ out2 ]
}

outputs:
{
  out1:
  {
    module_type: RootOutput
    fileName: "out1.root"
    SelectEvents: [ p1 ]
    outputCommands: [ "drop *", "keep arttest::IntProduct_m1a_*_*" ]
  }
  out2:
  {
    module_type: RootOutput
    fileName: "out2.root"
    SelectEvents: [ p2 ]
    outputCommands: [ "drop *",
                      "keep arttest::IntProduct_m1b_*_*",
                      "keep *_m2a_*_*" ]
  }
}

source:
{
  module_type: EmptyEvent

  # were in the global area before
  maxEvents: 20
  # maxSubRuns: 2
}

process_name: DEVEL
